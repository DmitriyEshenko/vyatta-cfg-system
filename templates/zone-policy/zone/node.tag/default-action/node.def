type: txt

help: Set default-action for traffic coming into this zone

default: "drop"

syntax:expression: $VAR(@) in "drop", "reject";
                   "default-action must be either drop or reject"

comp_help: possible completions:
  drop            Drop silently (default)
  reject          Drop and notify source

create: 
	if ! /opt/vyatta/sbin/vyatta-zone.pl	\
          --action=set-default-policy           \
          --zone-name="$VAR(../@)"              \
          --default-policy="$VAR(@)"; then
          exit 1
        fi

update: 
	if ! /opt/vyatta/sbin/vyatta-zone.pl	\
          --action=set-default-policy           \
          --zone-name="$VAR(../@)"              \
          --default-policy="$VAR(@)"; then
	  exit 1
	fi
