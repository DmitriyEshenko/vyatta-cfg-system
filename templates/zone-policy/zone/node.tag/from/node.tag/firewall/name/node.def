type: txt
help: Set IPv4 firewall ruleset

allowed:
        local -a params ;
        params=( /opt/vyatta/config/active/firewall/name/* )
        echo -n ${params[@]##*/}

create:
      if  ! /opt/vyatta/sbin/vyatta-zone.pl     \
          --action=is-fwruleset-active          \
          --zone-name="$VAR(../../../@)"        \
          --ruleset-type=name                   \
          --ruleset-name="$VAR(@)"; then
          exit 1
      fi

      
      if ! /opt/vyatta/sbin/vyatta-zone.pl	\
          --action=add-fromzone-fw              \
          --zone-name="$VAR(../../../@)"        \
          --from-zone="$VAR(../../@)"           \
          --ruleset-type=name                   \
          --ruleset-name="$VAR(@)"; then
          exit 1
      fi

update:
      if  ! /opt/vyatta/sbin/vyatta-zone.pl     \
          --action=is-fwruleset-active          \
          --zone-name="$VAR(../../../@)"        \
	  --ruleset-type=name			\
          --ruleset-name="$VAR(@)"; then
          exit 1
      fi

        # need to undo previous ruleset here first
	old_ruleset=`cat /opt/vyatta/config/active/zone-policy/zone/$VAR(../../../@)/from/$VAR(../../@)/firewall/name/node.val`
      if ! /opt/vyatta/sbin/vyatta-zone.pl	\
          --action=delete-fromzone-fw           \
          --zone-name="$VAR(../../../@)"        \
          --from-zone="$VAR(../../@)"           \
          --ruleset-type=name                   \
          --ruleset-name="$old_ruleset"; then
          exit 1
      fi

      if ! /opt/vyatta/sbin/vyatta-zone.pl	\
          --action=add-fromzone-fw              \
          --zone-name="$VAR(../../../@)"        \
          --from-zone="$VAR(../../@)"           \
          --ruleset-type=name                   \
          --ruleset-name="$VAR(@)"; then
          exit 1
      fi

delete:
      if ! /opt/vyatta/sbin/vyatta-zone.pl	\
          --action=delete-fromzone-fw           \
          --zone-name="$VAR(../../../@)"        \
          --from-zone="$VAR(../../@)"           \
          --ruleset-type=name                   \
          --ruleset-name="$VAR(@)"; then
          exit 1
      fi
